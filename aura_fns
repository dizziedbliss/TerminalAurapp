# Function to show disk usage
disk_usage() {
    echo "Here's the disk usage status:"
    df -h
}

# Function to show system stats (CPU, Memory, etc.)
sys_stats() {
    echo "Displaying system stats (CPU, memory):"
    top -n 1 | head -n 10
}

